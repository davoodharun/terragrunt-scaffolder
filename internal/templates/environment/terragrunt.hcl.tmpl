include "root" {
  path = find_in_parent_folders("root.hcl")
}

include "component" {
  path = "${get_repo_root()}/.infrastructure/_components/{{.StackName}}/{{.Component}}/component.hcl"
}

{{ if .HasAppSettings }}
include "appsettings" {
  path = "${get_repo_root()}/.infrastructure/app_settings_{{ .Component }}/appsettings.hcl"
}
{{ end }}

{{ if .HasPolicyFiles }}
include "policy" {
  path = "${get_repo_root()}/.infrastructure/policy_files_{{ .Component }}/policy.hcl"
}
{{ end }} 
